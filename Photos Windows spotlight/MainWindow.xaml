                    Margin="425,5,273,0" 
                    VerticalAlignment="Top" Height="23" Grid.Row="1" Click="ButtonPathToDirectory_Click"/>

            <Label Content=""
                   Name="OutputForWin"
                   HorizontalAlignment="Left" 
                   Height="266" 
                   Margin="10,10,0,0" 
                   VerticalAlignment="Top" 
                   Width="752" Grid.Row="2"/>
            <Button Content="Button" 
                    HorizontalAlignment="Left" 
                    Margin="480,20,0,0" 
                    Grid.Row="3" 
                    VerticalAlignment="Top" 
                    Width="76" Height="20"/>
            <Button Content="Button" 
                    HorizontalAlignment="Left" 
                    Margin="580,20,0,0" 
                    Grid.Row="3" 
                    VerticalAlignment="Top" 
                    Width="74" Height="20"/>
            <Button Content="Button" 
                    HorizontalAlignment="Left" 
                    Margin="680,20,0,0" 
                    Grid.Row="3" 
                    VerticalAlignment="Top" 
                    Width="75" Height="20"/>

        </Grid>

    </Grid>
</Window>
